# -*- mode: snippet -*-
# name: New Executable
# key: <executable
# --
executable $1
    main-is:          $1.hs

    -- Modules included in this executable, other than Main.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:
    build-depends:    base ^>=4.14.1.0
    hs-source-dirs:   app
    default-language: Haskell2010
    ghc-options:      -main-is $1 -O2